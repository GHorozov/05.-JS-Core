<section id="viewAds" class="viewAds">
    <h1 class="titleForm">Advertisements</h1>
    <div id="ads" class="ads">
        <table>
            <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date Published</th>
                <th>Views</th>
            </tr>
            {{#each ads}}
            <tr data-id="{{_id}}">
                <td>{{title}}</td>
                <td>{{publisher}}</td>
                <td>{{description}}</td>
                <td>{{price}}</td>
                <td>{{date}}</td>
                <td>{{views}}</td>
                <td style="display: none">{{pictureUrl}}</td>
                <td>
                    <a href="#" class="btnReadMore">[ReadMore]</a>
                    {{#if isAuthor}}
                    <a href="#" class="btnDelete">[Delete]</a>
                    <a href="#" class="btnEdit">[Edit]</a>
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</section>