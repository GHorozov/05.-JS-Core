{{> header}}
{{> navigation}}

<section id="viewMe">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{name}}</h2>

            <form action="#/submitChirp" method="post" id="formSubmitChirpMy" class="chirp-form">
                <textarea name="text" class="chirp-input"></textarea>
                <input class="chirp-submit" id="btnSubmitChirpMy" value="Chirp" type="submit">
            </form>

            <div id="myStats" class="user-details">
                <span>{{chirps}} chirps</span> | <span>{{following}} following</span> | <span>{{followers}} followers</span>
            </div>
        </div>
        <div id="myChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>

            {{#each articles}}
                {{> article}}
            {{else}}
                <p>No chirps in database</p>
            {{/each}}
        </div>
    </div>
</section>

{{> footer}}